#!/bin/bash

# Mini-Judge Installation Script
set -e

echo "🚀 Installing Mini-Judge dependencies..."

# Check if Node.js is installed
if ! command -v node &> /dev/null; then
    echo "❌ Node.js is not installed. Please install Node.js 18+ first."
    echo "   Visit: https://nodejs.org/"
    exit 1
fi

# Check Node.js version
NODE_VERSION=$(node -v | cut -d'v' -f2 | cut -d'.' -f1)
if [ "$NODE_VERSION" -lt 18 ]; then
    echo "❌ Node.js version 18+ is required. Current version: $(node -v)"
    echo "   Please upgrade Node.js to version 18 or higher."
    exit 1
fi

echo "✅ Node.js version: $(node -v)"

# Check if npm is installed
if ! command -v npm &> /dev/null; then
    echo "❌ npm is not installed. Please install npm."
    exit 1
fi

echo "✅ npm version: $(npm -v)"

# Check if Docker is installed
if ! command -v docker &> /dev/null; then
    echo "⚠️  Docker is not installed. Mini-Judge requires Docker for code execution."
    echo "   Please install Docker: https://docs.docker.com/get-docker/"
    echo "   Continuing with installation..."
else
    echo "✅ Docker version: $(docker --version)"
fi

# Install dependencies
echo "📦 Installing npm dependencies..."
npm install

# Create necessary directories
echo "📁 Creating necessary directories..."
mkdir -p tmp
mkdir -p problems

# Set proper permissions
echo "🔧 Setting up permissions..."
chmod +x scripts/*.sh

echo "✅ Installation complete!"
echo ""
echo "To start Mini-Judge:"
echo "  npm start"
echo ""
echo "To run tests:"
echo "  npm test"
echo ""
echo "To use Docker:"
echo "  ./scripts/docker-setup.sh"
echo ""
echo "For more information, see README-Docker.md" 